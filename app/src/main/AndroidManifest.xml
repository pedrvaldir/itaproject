<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.valdir.appitarare">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ui.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.activities.CategoryActivity"
            android:label="Categories"
            android:parentActivityName=".ui.activities.MainActivity"/>

        <activity android:name=".ui.activities.AllAdvertisementActivity"
            android:label="AllAdvertisement"
            android:parentActivityName=".ui.activities.CategoryActivity"/>

        <activity android:name=".ui.activities.AdvertisementActivity"
            android:label="Advertisement"
            android:parentActivityName=".ui.activities.AllAdvertisementActivity"/>

    </application>

</manifest>